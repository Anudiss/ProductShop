<Window x:Class="ProductShop.Windows.Auth.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductShop.Windows.Auth"
        xmlns:components="clr-namespace:ProductShop.Components"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        Title="Окно авторизации"
        Background="{StaticResource Background}"
        Icon="{Binding Converter={StaticResource SystemImageConverter}, ConverterParameter='logo'}">

    <StackPanel Margin="20" Width="270">
        <TextBlock Text="Авторизация"
                   FontSize="24" FontWeight="Black"
                   HorizontalAlignment="Center"
                   Foreground="{StaticResource TextColor}"/>
        <components:InputField Label="Логин"
                               Margin="0 10 0 5"/>
        <components:PasswordField Label="Пароль"
                                  Margin="0 0 0 10"/>

        <CheckBox Name="RememberMe" IsChecked="true" Content="Запомнить меня"
                  FontSize="20" FontWeight="SemiBold"
                  VerticalContentAlignment="Center"
                  Foreground="{StaticResource TextColor}"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Войти"
                    Margin="5 5"
                    Style="{StaticResource DefaultButton}"/>
            <Button Content="Регистрация" Margin="5 5"
                    Style="{StaticResource DefaultButton}"/>
        </StackPanel>
        
    </StackPanel>
</Window>
