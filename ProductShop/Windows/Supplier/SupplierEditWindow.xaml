<Window x:Class="ProductShop.Windows.Supplier.SupplierEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SupplierEditWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Name="SupplierEditWindowRoot"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">

    <Border CornerRadius="5">
        <ContentControl Content="{Binding ElementName=SupplierEditWindowRoot, Path=DataContext}"/>
    </Border>
</Window>
