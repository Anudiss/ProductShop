<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:ProductShop.ViewModels"
                    xmlns:views="clr-namespace:ProductShop.Views">

    <DataTemplate DataType="{x:Type models:ProductVM}">
        <views:ProductView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type models:ProductsPageVM}">
        <views:ProductsPageView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type models:EditProductVM}">
        <views:EditProductView/>
    </DataTemplate>
    
</ResourceDictionary>